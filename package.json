	"dependencies": {
		"@hono/node-server": "^1.19.6",
		"@hono/zod-validator": "^0.7.5",
		"argon2": "^0.44.0",
		"drizzle-orm": "^0.45.0",
		"hono": "^4.10.7",
		"pg": "^8.16.3",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"wouter": "^3.8.1",
		"zod": "^4.1.13"
	},
	"devDependencies": {
