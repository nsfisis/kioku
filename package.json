		"@vitejs/plugin-react": "^5.1.1",
		"drizzle-kit": "^0.31.8",
		"jsdom": "^27.2.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.15"
